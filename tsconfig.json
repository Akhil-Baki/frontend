{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "admin/*": [
        "static/src/javascripts/projects/admin/*"
      ],
      "commercial/*": [
        "static/src/javascripts/projects/commercial/*"
      ],
      "common/*": [
        "static/src/javascripts/projects/common/*"
      ],
      "facia/*": [
        "static/src/javascripts/projects/facia/*"
      ],
      "journalism/*": [
        "static/src/javascripts/projects/journalism/*"
      ],
      "lib/*": [
        "static/src/javascripts/lib/*"
      ],
      "membership/*": [
        "static/src/javascripts/projects/membership/*"
      ],
      "svgs/*": [
        "static/src/inline-svgs*"
      ]
    },
    "resolveJsonModule": true,
    "strict": false,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "include": [
    "static/src/javascripts"
  ]
}
